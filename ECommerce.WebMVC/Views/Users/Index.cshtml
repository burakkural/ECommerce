@model IEnumerable<ECommerce.Entities.Dtos.UserDtos.UserDetailDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Kullanıcılar</h1>
<a class="btn btn-primary mb-3" asp-action="Add">Kullanıcı Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Kullanıcı Adı</td>
            <td>Ad</td>
            <td>Soyad</td>
            <td>Cinsiyet</td>
            <td>Doğum Tarihi</td>
            <td>E-Mail</td>
            <td>Adres</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.UserName</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            @if (item.Gender)
            {
                <td>Erkek</td>
            }
            else
            {
                <td>Kadın</td>
            }
            <td>@item.DateOfBirth.ToString("dd.MM.yyyy")</td>
            <td>@item.Email</td>
            <td>@item.Address</td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id" class="badge badge-info">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="badge badge-danger">Sil</a>
            </td>
        </tr>
        }
    </tbody>
</table>

